<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true" data-controller="devise">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="devise-modal-header">
        <h3>Login</h3>
      </div>
      <div class="devise-modal-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        label: false,
                        placeholder: "Correo Electrónico",
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "contact-input" } %>
            <%= f.input :password,
                        required: false,
                        placeholder: "Contraseña",
                        label: false,
                        input_html: { autocomplete: "current-password", class: "contact-input" } %>
            <%= link_to "Olvide mi constraseña", new_password_path(resource_name), class: "devise-link" %><br />
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Entrar", class: "btn-primary btn-devise" %>
          </div>
        <% end %>
      </div>
      <div class="devise-modal-footer">
        <p style="color: rgba(98, 106, 121, 0.6)">No tiene cuenta? <a class="devise-link" data-self="loginModal" data-action="click->devise#closeSelf" data-toggle="modal" data-target="#signupModal">
        Crear Cuenta</a></p>
      </div>
    </div>
  </div>
</div>

