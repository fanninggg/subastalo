<div class="d-flex">
  <%= render "admin/shared/sidebar", categories: @categories %>
  <div class="sidebar-aware-container">
    <div class="container pt-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Subastas</h3>
        <%#= link_to "+ Agregar Subasta", new_admin_product_path, class: "btn btn-primary" %>
        <a data-toggle="modal" data-target="#newCategoryModal" class="btn btn-primary">+ Agregar Categoría</a>
      </div>
      <div class="category-grid">
        <% @categories.each do |category| %>
          <%= link_to admin_category_path(category), class: "category-card", style: "background-image: url(#{category.photo.attached? ? cl_image_path(category.photo.key) : 'https://images.pexels.com/photos/225841/pexels-photo-225841.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940'})" do %>
            <div class="category-card-overlay"></div>
            <p class="category-card-text"><%= category.name %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="newCategoryModal" tabindex="-1" role="dialog" aria-labelledby="documentsModalLabel" aria-hidden="true" data-controller="loading">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="devise-modal-header">
        <h3></h3>
      </div>
      <div class="devise-modal-body" data-target="admin.documentHolder">
        <h3 class="text-center mb-4">Nueva Categoría</h3>
        <%= render "form.html.erb", category: @category %>
      </div>
      <div class="devise-modal-footer">

      </div>
    </div>
  </div>
</div>
