<div class="d-flex">
  <%= render "admin/shared/sidebar", categories: @categories %>
  <div class="sidebar-aware-container">
    <div class="container pt-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Subastas</h3>
        <%= link_to "+ Agregar CategorÃ­a", new_admin_category_path, class: "btn btn-primary" %>
      </div>
      <div class="category-grid">
        <% @categories.each do |category| %>
          <div class="grid-fill">
            <%= link_to admin_category_path(category), class: "category-card", style: "background-image: url(#{category.photo.attached? ? url_for(category.photo) : 'https://images.pexels.com/photos/225841/pexels-photo-225841.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940'})" do %>
              <div class="category-card-overlay p-3">
                <% if category.hidden %>
                  <span class="bubble big-bubble yellow-bubble">Oculto</span>
                <% else %>
                  <span class="bubble big-bubble green-bubble">Activo</span>
                <% end %>
              </div>
              <p class="category-card-text"><%= category.display_name %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
